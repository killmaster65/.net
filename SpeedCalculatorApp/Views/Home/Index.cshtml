<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Speed Calculator</title>
</head>
<body>
    <h1>Speed Calculator</h1>
    <form method="post" action="/Speed/CalculateSpeed">
        <label for="time">Time:</label>
        <input type="number" id="time" name="time" required><br>
        <label for="distance">Distance:</label>
        <input type="number" id="distance" name="distance" required><br>
        <button type="submit">Calculate Speed</button>
    </form>
    @if (ViewBag.Error != null)
    {
        <p style="color:red;">@ViewBag.Error</p>
    }
</body>
</html>

@{
    ViewData["Title"] = "Speed Calculator";
}

@model Forms.Models.ConversionModel

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">




<h1>@ViewData["Title"]</h1>

<Div class=Box>
        
        <h4> Calculate Speed (Distance/Time)</h4>
        <form method="post" asp-action="Result"  asp-controller="SpeedFunction" >
                <label for="time">Time (SEC):</label>
                <input type="number" id="time" asp-for="Time" required>
                <label for="TimeUnit">Time Unit:</label>
                <select id="TimeUnit"  asp-for="TimeUnit">
                        <option value="seconds">Seconds</option>
                        <option value="minutes">Minutes</option>
                        <option value="hours">Hours</option>
                </select><br>
                <label for="Distance">Distance:</label>
                <input type="number" id="Distance"  asp-for="Distance" required>
                <select id="DisUnit"  asp-for="DisUnit">
                        <option value="meter">Meter</option>
                        <option value="centimeter">Centimeter</option>
                        <option value="millimeter">Millimeter</option>
                        <option value="kilometer">Kilometer</option>
                </select><br>
                <button type="submit">Calculate Speed</button>
        </form>
</Div>

<Div class=Box>
        
        <h4> Calculate Time (Distance/Speed)</h4>
        <form method="post" asp-action="Time"  asp-controller="SpeedFunction" >
                <label for="Speed">Speed:</label>
                <input type="number" id="Speed"  asp-for="Speed" required>
                <select id="SpeedUnit"  asp-for="SpeedUnit">
                        <option value="meter per second">Meter per Second</option>
                        <option value="miles per hour">Miles per hour</option>
                        <option value="kilometers per hour">Kilometers per hour</option>
                        <option value="feet per second">Feet per second</option>
                </select><br>
                <label for="Dstance">Distance:</label>
                <input type="number" id="Distance"  asp-for="Distance" required>
                <select id="DisUnit"  asp-for="DisUnit">
                        <option value="meter">Meter</option>
                        <option value="centimeter">Centimeter</option>
                        <option value="millimeter">Millimeter</option>
                        <option value="kilometer">Kilometer</option>
                </select><br>
                <button type="submit">Calculate Time</button>
        </form>
</Div>


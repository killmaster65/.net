@{
    ViewData["Title"] = "Speed Calculator";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">


<Div class=Box>
        
        <h4> Calculate Kentic Energy</h4>
        <form method="post" action="/KineticEnergy/KEResult" >
                <label for="mass">Mass:</label>
                <input type="number" id="mass" name="mass" required><br>
                <label for="velocity">Velocity:</label>
                <input type="number" id="velocity" name="velocity" required><br>
                <button type="submit">Calculate Kentic Energy</button>
        </form>
</Div>